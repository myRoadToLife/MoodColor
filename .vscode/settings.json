{
    "files.exclude": {
        "**/*.meta": true,        // Скрыть все .meta файлы
        "**/Library": true,       // Скрыть папку Library
        "**/Temp": true,         // Скрыть папку Temp
        "**/*.csproj": true  
            // Скрыть .csproj файлы
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true
    },
    "dotnet.preferCSharpExtension": true,
    "dotnet.defaultSolution": "MoodColor.sln"
}