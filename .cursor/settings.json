{
  "explorer.excludes": ["**/*.meta"],
  "files.exclude": {
    "**/*.meta": true,
    "**/Assets/**/*.meta": true,
    "**/Packages/**/*.meta": true,
    "**/ProjectSettings/**/*.meta": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.gitignore": false,
    "**/.gitmodules": false,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/*.meta": true
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.formatOnPaste": true
} 